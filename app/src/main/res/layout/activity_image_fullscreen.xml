<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ImageFullscreen"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnShare"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDelete"
        android:layout_margin="@dimen/activity_vertical_margin">

    </ImageView>


    <Button
        android:id="@+id/btnExportPdf"
        android:layout_width="@dimen/button_crop_activity"
        android:layout_height="@dimen/button_crop_activity"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:background="@drawable/ic_export_pdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </Button>

    <Button
        android:id="@+id/btnShare"
        android:layout_width="@dimen/button_crop_activity"
        android:layout_height="@dimen/button_crop_activity"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:background="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/button_crop_activity"
        android:layout_height="@dimen/button_crop_activity"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:background="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <ToggleButton
        android:id="@+id/btnBWConversion"
        android:layout_width="@dimen/button_crop_activity"
        android:layout_height="@dimen/button_crop_activity"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bw_conversion_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnShare">

    </ToggleButton>

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ProgressBar>



</androidx.constraintlayout.widget.ConstraintLayout>